{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "hostname": "127.0.0.1",
      "port": 9000,
      "pathMappings": {
        "/var/www/html": "${workspaceRoot}"
      }
    },
    {
      "name": "Launch current script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 8080,
    },
  ],
  "compounds": [
    {
      "name": "Start Debug",
      "configurations": [
        "Listen for XDebug",
        "Launch current script"
      ]
    }
  ]
}
